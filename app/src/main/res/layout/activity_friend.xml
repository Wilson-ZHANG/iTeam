<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.iteam_fragment.nav.FriendActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/friend_head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#01B8BB"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/friend_head_back"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:src="@drawable/headback"
            android:focusable="true"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/fiend_head_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="好友"
            android:textColor="#FFF"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/search_friend_image"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:src="@drawable/add"
            android:focusable="true"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/friend_recycle_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
